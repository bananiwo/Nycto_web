<!DOCTYPE html>
<html style="font-size: 16px;" lang="pl">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Rejestracja</title>
    <link rel="stylesheet" href="/register.css" media="screen">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">

    <!-- Dodany bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <meta property="og:title" content="Strona główna">
    <meta property="og:type" content="website">
</head>

<body class="body" data-lang="pl">


    <section class="section5">
        <%- include('./partials/nav.ejs') %>

    <div class="create-comment content text-center">
        <form action="../users/validate-form" method="POST">
            <h4 class="label1"><label for="title">Nazwa użytkownika:</label></h4>
            <input type="text" placeholder="Nazwa użytkownika" name="userName" value="<%=(typeof inputData!='undefined')? inputData.userName:''%>">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.userName!='undefined' )? errors.userName.msg:''%></p>
            <h5 class="label2"><label for="snippet">Email:</label></h5>
            <input type="email" placeholder="Adres email" name="emailAddress" value="<%=(typeof inputData!='undefined')? inputData.emailAddress:''%>">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.emailAddress!='undefined' )? errors.emailAddress.msg:''%></p>
            <h5 class="label2"><label for="snippet">Hasło:</label></h5>
            <input type="password" placeholder="Hasło" name="password">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.password!='undefined' )? errors.password.msg:''%></p>
            <h5 class="label2"><label for="snippet">Powtórz hasło:</label></h5>
            <input type="password" placeholder="Powtórz hasło" name="confirmPassword">
            <p style="color: red;"><%=(typeof errors!='undefined' && typeof errors.confirmPassword!='undefined' )? errors.confirmPassword.msg:''%></p>
            <h6 class="label3"><button class="sub_button" type="submit">Zatwierdź</button></h6>
        </form>
    </div>

    </section>

    <%- include('./partials/footer.ejs') %>

</body>
</html>