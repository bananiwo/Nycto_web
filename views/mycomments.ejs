<!DOCTYPE html>
<html style="font-size: 16px;" lang="pl">

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Forum</title>
    <link rel="stylesheet" href="/mycomments.css" media="screen">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">

    <!-- Dodany bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    <meta property="og:title" content="Forum">
    <meta property="og:type" content="website">
</head>
<body class="body" data-lang="pl">


<section class="section6">
    <%- include('./partials/nav.ejs') %>


    <h2 class="label1 text-center">Moje komentarze:</h2>

    <div class="comments content">
        <% if (comments.length > 0) { %>
            <% comments.forEach(comment => { %>
                <a class="single" href="/comments/<%= comment._id %>" style="text-decoration: none">
                    <h3 class="title"><%= comment.title %></h3>
                    <p class="snippet2"><%= comment.body %></p>
                </a>
            <% }) %>
        <% } else { %>
            <p>There are no comments to display</p>
        <% } %>
    </div>

</section>

<%- include('./partials/footer.ejs') %>

</body>
</html>